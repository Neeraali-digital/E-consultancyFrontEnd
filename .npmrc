# NPM Configuration for Wayzon Consultancy Frontend
# This file ensures consistent dependency resolution during deployment

# Use legacy peer deps to resolve Angular version conflicts
legacy-peer-deps=true

# Force resolution for deployment
force=true

# Enable package-lock for consistent builds
package-lock=true

# Set registry for faster downloads
registry=https://registry.npmjs.org/

# Enable progress for build visibility
progress=true

# Set timeout for slow networks
timeout=300000

# Disable audit during install for faster builds
audit=false

# Disable funding messages
fund=false
